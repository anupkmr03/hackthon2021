{
  "name": "eyecare",
  "displayName": "EyeCare",
  "description": "A simple vscode extension!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:eyecare.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eyecare.helloWorld",
        "title": "Hello World"
      }
    ], 
    "configuration": {
      "title": "Eye Care",
      "properties": {
        "eyeCare.keepItRunningAlways": {
          "type": "boolean",
          "default": true,
          "description": "Keep the extension running in backgroud"
        },
         "eyeCare.showExcercisePage": {
          "type": "boolean",
          "default": true,
          "description": "Show excercise page"
        },
        "eyeCare.notificationMessage": {
          "type": "string",
          "default": "Take a min to relax your eyes",
          "description": "Show excercise page"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
