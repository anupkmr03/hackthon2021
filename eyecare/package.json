{
  "name": "eyecare",
  "displayName": "EyeCare",
  "publisher": "anupkumar",
  "description": "A simple vscode extension!",
  "icon": "img/extensionLogo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eyecare.helloWorld",
        "title": "Hello World"
      }
    ], 
    "configuration": {
      "title": "Eye Care",
      "properties": {
        "eyeCare.keepItRunningAlways": {
          "type": "boolean",
          "default": true,
          "description": "Keep the extension running in backgroud (Applies on restart of VS Code)"
        },
         "eyeCare.breakDuration": {
          "type": "string",
          "default": "20",
          "description": "Default time in minutes to take break (Applies on restart of VS Code)."
        },
        "eyeCare.notificationAlert": {
            "type": "boolean",
            "default": true,
            "description": "Play an sound when timer is done (Applies on restart of VS Code)."
        },
        "eyeCare.notificationMessage": {
          "type": "string",
          "default": "Take a min to relax your eyes",
          "description": "Show a text pop-up when timer is done (Applies on restart of VS Code)"
        }, 
          "eyeCare.notificationMessageSound": {
          "type": "string",
          "default": "Bell",
          "description": "Change notification sound (Currently not available).",
          "enum": [
              "Chime",
              "Bell",
              "Outlook",
              "Teams"
          ]
      }, 
      "eyeCare.showExcercisePage": {
          "type": "boolean",
          "default": true,
          "description": "Show excercise page (Applies on restart of VS Code)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
